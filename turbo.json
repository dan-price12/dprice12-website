{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": ["**/.env.*local"],
    "pipeline": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": ["dist/**", ".next/**", "!.next/cache/**", "storybook-static/**"]
        },
        "lint": {
            "outputs": []
        },
        "dev": {
            "cache": false
        },
        "cypress:open": {
            "cache": false,
            "outputs": []
        },
        "cypress:run": {
            "cache": false,
            "outputs": []
        },
        "storybook": {
            "cache": false,
            "dependsOn": ["^build"],
            "outputs": []
        }
    }
}
